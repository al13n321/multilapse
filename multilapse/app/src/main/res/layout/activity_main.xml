<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kolmike.multilapse.MainActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host"
        android:id="@+id/host_switch"
        android:checked="false"
        android:onClick="onHostSwitched"
        android:layout_alignBottom="@+id/gif_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snap"
        android:id="@+id/snap_button"
        android:onClick="onTakeSnapshot"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/hypersnap_button"
        android:layout_toEndOf="@+id/hypersnap_button" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/preview_switch"
        android:enabled="true"
        android:textOn="On"
        android:textOff="Off"
        android:onClick="onSwitchPreviewClick"
        android:checked="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/host_switch"
        android:layout_toEndOf="@+id/host_switch"
        android:layout_marginLeft="235dp"
        android:layout_marginStart="235dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/gif_button"
        android:textOff="gif"
        android:textOn="/gif"
        android:onClick="onGifButtonClick"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/hypersnap_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hypersnap"
        android:id="@+id/hypersnap_button"
        android:layout_alignTop="@+id/snap_button"
        android:layout_centerHorizontal="true"
        android:onClick="onHypersnap"
        android:layout_alignParentBottom="true"
         />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kolmike.multilapse.MainActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host"
        android:id="@+id/host_switch"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:onClick="onHostSwitched" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hypersnap"
        android:id="@+id/snap_button"
        android:onClick="onTakeSnapshot"
        android:layout_alignTop="@+id/preview_switch"
        android:layout_toLeftOf="@+id/preview_switch"
        android:layout_toStartOf="@+id/preview_switch" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/preview_switch"
        android:enabled="true"
        android:textOn="On"
        android:textOff="Off"
        android:onClick="onSwitchPreviewClick"
        android:checked="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/gif_button"
        android:layout_alignTop="@+id/snap_button"
        android:layout_toLeftOf="@+id/snap_button"
        android:layout_toStartOf="@+id/snap_button"
        android:textOff="Start gif"
        android:textOn="Stop gif"
        android:onClick="onGifButtonClick" />

</RelativeLayout>
